
{
    "rules": {
        "quotes": ["error", "single"],
        "eqeqeq": ["error", "always"],
        "semi": ["error", "always"],
        "semi-spacing": ["error", { "before": false, "after": true }]
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "ecmaFeatures": {
        "modules": true,
        "spread" : true,
        "restParams" : true
    },
    "env" : {
        "browser" : true,
        "node" : true,
        "es6" : true
    }
}